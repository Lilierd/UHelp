<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond"
    android:fitsSystemWindows="true"
    tools:context=".AccueilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">
            <Button
                android:id="@+id/retour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_bold"
                android:padding="15dp"
                android:text="Retour"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:backgroundTint="@color/white" />
            <TextView
                android:id="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Hello pseudo !"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:hint="De quoi avez-vous besoin aujourd'hui ?"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_bold"
                    android:background="@color/uhelp"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:padding="20dp"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Demandes du jour"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">
                <ImageView
                    android:src="@drawable/carre"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"/>
                <ImageView
                    android:src="@drawable/carre"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"/>
                <ImageView
                    android:src="@drawable/carre"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"/>
                <ImageView
                    android:src="@drawable/carre"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"/>
            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Mes demandes"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"/>

            <GridLayout
                android:id="@+id/mesdemandes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:scrollbars="vertical"
                android:background="@color/uhelp">

            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>