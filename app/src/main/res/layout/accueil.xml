<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond"
    android:fitsSystemWindows="true"
    tools:context=".AccueilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        >

        <!--Bienvenue et recherche-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">
            <Button
                android:id="@+id/retourAccueil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_bold"
                android:padding="15dp"
                android:text="Retour"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:backgroundTint="@color/white" />
            <TextView
                android:id="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Hello pseudo !"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:hint="De quoi avez-vous besoin aujourd'hui ?"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_bold"
                    android:background="@color/uhelp"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:padding="20dp"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!--Demandes du jour-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Demandes du jour"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:paddingVertical="15dp"
                    android:columnCount="1"
                    >
                    <LinearLayout
                        android:layout_height="75dp"
                        android:background="@drawable/carre"/>
                    <LinearLayout
                        android:layout_height="75dp"
                        android:background="@drawable/carre"/>
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:columnCount="1">
                    <LinearLayout
                        android:layout_height="75dp"
                        android:background="@drawable/carre"/>
                    <LinearLayout
                        android:layout_height="75dp"
                        android:background="@drawable/carre"/>
                </GridLayout>
            </GridLayout>

        </LinearLayout>

        <!--Mes demandes-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                style="@style/TextViewUHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mes demandes"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/carre"
                >
                <!--Liste des demandes-->
                <LinearLayout
                    android:id="@+id/mesdemandes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include
            layout="@layout/menu_bar"/>
    </LinearLayout>
</RelativeLayout>