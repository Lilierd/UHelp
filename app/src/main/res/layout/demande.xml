<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond"
    android:id="@+id/fond"
    android:fitsSystemWindows="true"
    tools:context=".DemandeActivity">
    <!--Vue spÃ©cifique d'une demande unique-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/retour"
                android:layout_gravity="start"
                android:layout_weight="0"
                android:id="@+id/retourDemande"
                android:padding="20dp"/>

            <TextView
                android:id="@+id/nomDemande"
                style="@style/TextViewUHelpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="12dp"
                android:text="Demande x"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/typeDemande"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/TextViewUHelpText"
                    android:text="Type :"/>

                <TextView
                    android:id="@+id/descDemande"
                    style="@style/TextViewUHelpText"
                    android:text="Description :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include
            layout="@layout/menu_bar"/>
    </LinearLayout>
</RelativeLayout>