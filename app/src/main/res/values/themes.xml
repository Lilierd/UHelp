<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UHelp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!--Pour les entrÃ©es de texte-->
    <style name="TextInputLayoutStyle" parent="">
        <item name="boxStrokeColor">@color/uhelp</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="cursorColor">@color/grey</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <!--Pour les textes d'affichage-->
    <style name="TextViewUHelpTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="TextViewUHelpText">
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!--Style des boutons de Popup-->
    <style name="PopupBoutons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">30</item>
        <item name="marginHorizontal">20dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Theme.UHelp" parent="Base.Theme.UHelp" />
</resources>